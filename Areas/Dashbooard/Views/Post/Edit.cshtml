@model PostEditDto
<div class="container mt-5">
    <h1 class="mb-4">Edit Post</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="@Model.Id" /> <!-- Hidden input for Id -->
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeDescription">Home Description</label>
            <textarea asp-for="HomeDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="HomeDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhotoURL">Photo URL</label>
            <input asp-for="PhotoURL" class="form-control" />
            <span asp-validation-for="PhotoURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VideoURL">Video URL</label>
            <input asp-for="VideoURL" class="form-control" />
            <span asp-validation-for="VideoURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate">Created Date</label>
            <input asp-for="CreatedDate" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-info">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


